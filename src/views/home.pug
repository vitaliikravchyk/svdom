doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title SVDOM

    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.css')

    script(src="https://code.jquery.com/jquery-3.6.0.slim.min.js" integrity="sha256-u7e5khyithlIdTpu22PHhENmPcRdFiHRjhAuHcs05RI=" crossorigin="anonymous")
    script(src='https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.js')
    script(src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js")

    link(rel='stylesheet' href='/app.css')
    script(src='/home.js')
  body
    .container
      .header
        h1.ui.header
          | SVDOM
          .header.sub Safe place for your SVGs

      .ui.segment.new-svg-form
        form.ui.form#newSvgForm(action="/api/svgs" method="POST")
          .field
            label Insert your SVG code here
            textarea(name="content" rows='2')

          button.ui.tiny.teal.button(type="submit") Submit

      .ui.divider.divider_big

      div
        h3.ui.header Liked

        if likedSvgs.length
          .ui.two.cards
            each svg in likedSvgs
              .ui.card
                .content.svg-wrap
                  img(src=svg.originalUrl)
                .extra.content
                  button.mini.ui.button.likeSvgButton.icon(data-id=svg.id data-like="false")
                    i.heart.icon.red
                  button.mini.ui.button.right.floated.icon.removeSvgButton(data-id=svg.id)
                    i.trash.icon
        else
          .ui.message
            .header No liked images
            p Like some SVGs to view them here

      .ui.divider

      div
        h3.ui.header Uploaded

        if allSvgs.length
          .ui.two.cards
            each svg in allSvgs
              .ui.card
                .content.svg-wrap
                  img(src=svg.originalUrl)
                .extra.content
                  button.mini.ui.button.icon.likeSvgButton(data-id=svg.id data-like="true")
                    i.heart.outline.icon
                  button.mini.ui.button.icon.right.floated.removeSvgButton(data-id=svg.id)
                    i.trash.icon
        else
          .ui.message
            .header No uploaded images
            p Upload some SVGs to view them here
